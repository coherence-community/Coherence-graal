    <profile>
      <id>modular-tests</id>
      <activation>
        <!-- This is a work-around for the fact that activeByDefault does not do what you'd think it should -->
        <file><exists>.</exists></file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <!-- All tests are run with failsafe when testing with modules -->
              <skip>true</skip>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
                <configuration>
                  <!-- All tests are run with failsafe when testing with modules -->
                  <includes>
                    <include>**/*Test.java</include>
                    <include>**/*Tests.java</include>
                    <include>**/*IT.java</include>
                  </includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- disable tests in stage1 -->
    <profile>
      <id>stage1</id>
      <properties>
        <skipTests>true</skipTests>
      </properties>
    </profile>

    <!-- GraalVM native image -->
    <profile>
      <id>native</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.graalvm.buildtools</groupId>
            <artifactId>native-maven-plugin</artifactId>
            <extensions>true</extensions>
            <executions>
              <execution>
                <id>generate-resource-config</id>
                <goals>
                  <goal>generateResourceConfig</goal>
                </goals>
                <phase>prepare-package</phase>
                <configuration>
                  <isDetectionEnabled>true</isDetectionEnabled>
                </configuration>
              </execution>
              <execution>
                <id>build-native</id>
                <goals>
                  <goal>compile-no-fork</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <mainClass>com.oracle.bedrock.runtime.java.JavaApplicationRunner</mainClass>
                  <quickBuild>true</quickBuild>
                  <buildArgs>
                    <buildArg>-march=native</buildArg>
                    <buildArg>--emit</buildArg>
                    <buildArg>build-report</buildArg>
                    <buildArg>--initialize-at-build-time=org.junit.platform.commons.support.scanning.DefaultClasspathScanner</buildArg>
                    <buildArg>-J-Xmx45g</buildArg>
                    <buildArg>--enable-sbom=false</buildArg>
                    <buildArg>--enable-monitoring=jmxserver,jmxclient</buildArg>
                    <buildArg>-H:+UnlockExperimentalVMOptions</buildArg>
                    <buildArg>-H:+UseConservativeUnsafeAccess</buildArg>
<!-- This is to capture a JFR of the compile, it may break tests  -->
<!--                    <buildArg>-J-XX:StartFlightRecording=dumponexit=true</buildArg>-->
                  </buildArgs>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

